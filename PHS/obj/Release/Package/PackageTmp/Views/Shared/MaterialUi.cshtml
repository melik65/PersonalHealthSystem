    </nav>

    <div class="main">
       @RenderBody()      
    </div>
    
    <footer class="footer footer-default">
        <div class="container">
            <nav class="float-left">
                <ul>
                    <li>
                        <a href="https://www.creative-tim.com/">
                            PHS
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    </footer>
    <!--   Core JS Files   -->
    <script src="~/Content/MaterialUi/assets/js/core/jquery.min.js"></script>
    <script src="~/Content/MaterialUi/assets/js/core/popper.min.js" type="text/javascript"></script>
    <script src="~/Content/MaterialUi/assets/js/core/bootstrap-material-design.min.js" type="text/javascript"></script>
    <script src="~/Content/MaterialUi/assets/js/plugins/moment.min.js"></script>

    <!--	Plugin for the Datepicker, full documentation here: https://github.com/Eonasdan/bootstrap-datetimepicker -->
    <script src="~/Content/MaterialUi/assets/js/plugins/bootstrap-datetimepicker.js" type="text/javascript"></script>

    <!-- Place this tag in your head or just before your close body tag. -->
    <script async defer src="https://buttons.github.io/buttons.js"></script>

    <!-- Control Center for Material Kit: parallax effects, scripts for the example pages etc -->
    <script src="~/Content/MaterialUi/assets/js/material-kit.js?v=2.0.4" type="text/javascript"></script>

    <script>
        $('.datetimepicker').datetimepicker({
            icons: {
                time: "fa fa-clock-o",
                date: "fa fa-calendar",
                up: "fa fa-chevron-up",
                down: "fa fa-chevron-down",
                previous: 'fa fa-chevron-left',
                next: 'fa fa-chevron-right',
                today: 'fa fa-screenshot',
                clear: 'fa fa-trash',
                close: 'fa fa-remove'
            },
            "format":"DD-MM-YYYY"
        });


    // parola göster gizle
    $("#lock").click(function() {
        var pass = $("#kisi_sifre");
        var confirm = $("#sifreTekrar");
        if (pass.attr("type") == "password") {
            pass.attr("type", "text");
            confirm.attr("type", "text");
            $("#passwordSpan").attr("class", "fa fa-eye-slash");
        }

        else{
            pass.attr("type", "password");
            confirm.attr("type", "password");
            $("#passwordSpan").attr("class", "fa fa-eye");
        }
        
    });    

    // Şifre Önerme Foknsiyonu

    function CreatePassword(length) {
        var result           = [];
        var characters       = "ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789!#$%^&*()_+<>";
        var charactersLength = characters.length;
        for ( var i = 0; i < length; i++ ) {
          result.push(characters.charAt(Math.floor(Math.random() * 
            charactersLength)));
       }
       return result.join('');
    }


    $( "#sifreOner" ).click(function() {
        var _password = CreatePassword(20);
        $("#kisi_sifre").val(_password);
        $("#sifreTekrar").val(_password);
    });
    
    // Confirm Password

    </script>
</body>
</html>