    <!--custom css -->
    <link rel="stylesheet" type="text/css" href="~/Content/Styles/css/themes/all.css">
    <link rel="icon" href="~/Content/Styles/images/favicon.ico" type="image/x-icon" />

    <title>@ViewBag.Title</title>
</head>
<body>

    <div id="page" class="page-default container-fluid">
        <header id="header" class="header">
            <div class="row">
                <div id="Navbar" class="col-12">
                    <nav class="navbar navbar-expand-lg navbar-light bg-light">
                        <div class="container-fluid">
                            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                                <span class="navbar-toggler-icon"></span>
                            </button>
                            <div class="collapse navbar-collapse" id="navbarNav">
                                <ul class="navbar-nav">
                                    <li class="nav-item">
                                        <a class="nav-link" aria-current="page" href="anasayfa.html">hakkımızda</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="reçetelerim.html">giriş yapın</a>
                                    </li>
                                </ul>
