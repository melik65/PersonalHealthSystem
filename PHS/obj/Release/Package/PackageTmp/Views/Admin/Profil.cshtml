@model PHS.Models.tbl_admin

@{
    ViewBag.Title = "Profil";
    Layout = "~/Views/Shared/_Material.cshtml";
}

<div class="container mr-auto ml-auto">
    <div class="row">
        <div class="col-6 mr-auto ml-auto">
            <div class="card">
                <div class="card-header">
                    <h4>Bilgilerinizi güncelleyin</h4>
                </div>
                @if(ViewBag.error != null) {
                    <p>@ViewBag.error</p>
                }
                <div class="card-body">
                    @using (Html.BeginForm("Profil", "Admin", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.id)
                        <div class="form-row">
                            <div class="form-group col-12">
                                @Html.Label("id")
                                @Html.TextBoxFor(x => x.id, new { @class = "form-control", @disabled = "disabled" })
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-12">
                                @Html.Label("Kullanıcı adı")
                                @Html.TextBoxFor(x => x.username, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-12">
                                @Html.Label("Şifre")
                                @Html.TextBoxFor(x => x.password, new { @class = "form-control" })
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary">gönder</button>
                    }
                </div>
            </div>
        </div>
    </div>
</div>