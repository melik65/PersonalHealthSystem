@model PHS.Models.tbl_Kisiler
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/MaterialUi.cshtml";
}

<div class="container" style="min-height:450px;">
    <div class="row">
        <div class="col-lg-4 col-md-6 ml-auto mr-auto">
            <div class="card card-login  mt-5">
                @using (Html.BeginForm("Login", "Home", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="card-header card-header-primary text-center">
                        <h4 class="card-title">Giriş Yapın</h4>
                    </div>
                    <div class="card-body">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <i class="material-icons">mail</i>
                                </span>
                            </div>
                            @Html.TextBoxFor(x => x.kisi_eposta, new { @class = "form-control", @placeholder = "E Posta...", @required = "required" })
                        </div>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <i class="material-icons" id="lock">lock_outline</i>
                                </span>
                            </div>
                            @Html.TextBoxFor(x => x.kisi_sifre, new { @class = "form-control", @type = "password", @placeholder = "Şifre...", @required = "required" })
                        </div>
                    </div>
                    <div class="ml-5 p-1 pl-3">
                        <a href="/Kullanici/SifreYenile">Şifremi unuttum</a>
                    </div>
                    <div class="footer text-center">
                        <button type="submit" class="btn btn-primary mr-3">Giriş Yap</button>
                        @Html.ActionLink("Kayıt Ol ?", "Register")
                    </div>

                    if (ViewBag.hata != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show mt-5" role="alert">
                            <a href="/Kullanici/OnayMailGonder"><strong>@ViewBag.hata</strong></a>
                        </div>
                    }

                    if (ViewBag.KayitMesaj != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show mt-5" role="alert">
                            @ViewBag.KayitMesaj
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</div>