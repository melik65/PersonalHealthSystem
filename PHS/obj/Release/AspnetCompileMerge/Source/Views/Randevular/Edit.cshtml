@model PHS.Models.tbl_Randevular

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/SiteMain.cshtml";
}

<div class="container mt-5">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.randevu_id)
        @if(ViewBag.message != null) {
        <div class="alert alert-success w-25">
            <i class="fas fa-check"></i> @ViewBag.message
        </div>
        }
        <div class="form-group bmd-form-group">
            <label for="randevu_hastahane" class="bmd-label-floating">Hastahane</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.randevu_hastahane, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.randevu_hastahane, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group bmd-form-group">
            <label for="randevu_hastahane" class="bmd-label-floating">Doktor</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.randevu_doktor, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.randevu_doktor, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group bmd-form-group">
            <label for="randevu_hastahane" class="bmd-label-floating">Klinik</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.randevu_klinik, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.randevu_klinik, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group bmd-form-group">
            <label for="randevu_hastahane" class="bmd-label-floating">Tarih</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.randevu_tarih, new { htmlAttributes = new { @class = "form-control datetimepicker" } })
                @Html.ValidationMessageFor(model => model.randevu_tarih, "", new { @class = "text-danger" })
            </div>
        </div>
        @Html.HiddenFor(x => x.kisi_id)
        <div class="form-group bmd-form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Kaydet" class="btn btn-success" />
            </div>
        </div>
    </div>
    }
    <hr />
    <div>
       <a class="btn btn-primary" href="/Home/Index">Ana Sayfa</a>
    </div>
</div>

