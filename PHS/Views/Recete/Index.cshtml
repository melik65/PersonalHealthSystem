@model IEnumerable<PHS.Models.tbl_Recete>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/SiteMain.cshtml";
}

<div class="container mt-5" style="min-height:500px;">

    <p>
        @Html.ActionLink("Yeni ekle", "Create", null, new { @class = "btn btn-primary" })
    </p>
    <table class="table">
        <tr>
            <th>
                Reçete No
            </th>
            <th>
                Tarih
            </th>
            <th>
                Tür
            </th>
            <th>
                Doktor
            </th>
            <th>
                Kişi
            </th>
            <th>
                Düzenle
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.recete_no)
                </td>
                <td>
                   @item.recete_tarih.ToString("dd/MM/yyyy HH:mm")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.recete_tur)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.recete_hekim)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.tbl_Kisiler.kisi_isimSoyisim)
                </td>
                <td>
                    <a class="btn btn-warning" href="/Recete/Edit/@item.recete_id">
                        <span class="material-icons">edit</span>
                    </a>
                    <a class="btn btn-info" href="/Recete/Details/@item.recete_id">
                        <span class="material-icons">info</span>
                    </a>
                    
                        <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#@item.recete_id">
                            <span class="material-icons">delete</span>
                        </button>
                        
                </td>
            </tr>

            <!-- Modal -->
            <div class="modal fade" id="@item.recete_id" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            reçete silinsin mi
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-primary mr-1 text-white" data-dismiss="modal">İptal</button>
                            <a class="btn btn-danger" href="/Recete/Delete/@item.recete_id">Sil</a>
                        </div>
                    </div>
                </div>
            </div>
        }

    </table>

</div>


