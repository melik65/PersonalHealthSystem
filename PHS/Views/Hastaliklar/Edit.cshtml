@model PHS.Models.tbl_Hastaliklar

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/SiteMain.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-12 mt-5">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.hastalik_id)
                @Html.HiddenFor(x => x.kisi_id)
                <div class="form-group">
                    @Html.LabelFor(model => model.hastalik_tani,"Tanı", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.hastalik_tani, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.hastalik_tani, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.hastalik_tarih,"Tarih", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.hastalik_tarih, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.hastalik_tarih, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.hastalik_klinik,"Klinik", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.hastalik_klinik, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.hastalik_klinik, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.hastalik_hekim,"Doktor", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.hastalik_hekim, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.hastalik_hekim, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Kaydet" class="btn btn-primary" />
                    </div>
                </div>
            </div>
            }

            <div>
                <a href="/Hastaliklar/Index" class="btn btn-secondary text-white"><span class="material-icons">arrow_back</span> Geri</a>
            </div>

        </div>
    </div>
</div>
