@model PHS.Models.tbl_Kisiler
@{
    ViewBag.Title = "E postanızı Girin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div>
    <div class="w-25" style="margin:30px auto;">
        @using (Html.BeginForm("YeniSifre", "Kullanici", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div class="mb-3">
                <label for="kisi_sifre" class="form-label">Yeni şifrenizi girin</label>
                @Html.TextBoxFor(x => x.kisi_sifre, new { @class = "form-control", @placeholder = "Yeni Şifreniz", @aria_describedby = "SifreYardim" })
                @Html.ValidationMessageFor(x => x.kisi_sifre)
            </div>
            <div id="SifreYardim" class="form-text">@ViewBag.HataMesaj</div>
            <br />
            <button type="submit" class="btn btn-primary">Değiştir</button>

        }
    </div>
</div>